<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/self_white" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/self_blue" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/self_background" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/self_background" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/self_white" />

            <stroke android:width="1dp" android:color="@color/self_white" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>