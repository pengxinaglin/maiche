<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/hc_self_gray_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/self_white"
        android:orientation="horizontal"
        android:paddingBottom="17dp"
        android:paddingTop="17dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_curr_month_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hc_curr_month_bonus"
                android:textColor="@color/hc_self_gray_hint"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_curr_month_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/self_black"
                android:textSize="27dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_row"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_history_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hc_history_bonus"
                android:textColor="@color/hc_self_gray_hint"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_history_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/self_black"
                android:textSize="27dp"
                android:textStyle="bold"/>


        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/height_10dp">

        <com.haoche51.sales.custom.HCPullToRefresh
            android:id="@+id/pull_to_refresh"
            style="@style/wh_match"/>

        <ImageButton
            android:id="@+id/floatingactionbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:background="@drawable/ic_add_recommend"
            />
    </FrameLayout>

</LinearLayout>