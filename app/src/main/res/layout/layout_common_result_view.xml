<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000">


    <TextView
        android:id="@+id/result_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="@dimen/margin_9dp"
        android:gravity="center_horizontal"
        android:textColor="@color/hc_self_black"
        android:textSize="@dimen/margin_16dp"/>

    <TextView
        android:id="@+id/click_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_txt"
        android:layout_marginTop="@dimen/margin_15dp"
        android:gravity="center_horizontal"
        android:text="@string/common_click_to_refresh"
        android:textColor="@color/hc_self_gray_hint"
        android:textSize="@dimen/margin_14dp"/>
</RelativeLayout>