<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hc_self_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_qrcode_app_download"
        android:layout_width="@dimen/margin_160dp"
        android:layout_height="@dimen/margin_160dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="45dp"
        android:contentDescription="@null"/>

    <TextView
        style="@style/HCTheme.TextHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_qrcode_app_download"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_45dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:text="@string/hc_qrcode_share_app_download"
        android:textSize="@dimen/hc_text_size_normal"/>

</LinearLayout>