<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ll_color_tx1"
    android:orientation="vertical" >

    <include layout="@layout/ll_common_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ll_next_button_height"
        android:background="@color/ll_color_tx13"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ll_unbind_pos_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ll_casher_text_size_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/ll_color_tx6"
            android:textSize="@dimen/ll_casher_text_size_16" />

        <TextView
            android:id="@+id/ll_unbind_pos_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ll_casher_text_size_10"
            android:gravity="right"
            android:text="@string/ll_bind_unbind_pos"
            android:textColor="#01aeff"
            android:textSize="@dimen/ll_casher_text_size_16" />
    </LinearLayout>

</LinearLayout>