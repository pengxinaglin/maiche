<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="@dimen/ll_dialog_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ll_dialog_margin_bottom"
        android:layout_marginTop="@dimen/ll_dialog_margin_top"
        android:background="@drawable/ll_bg_dialog"
        android:clickable="false"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ll_dialog_head"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ll_dialog_title_height"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/ll_dialog_title_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/ll_casher_text_size_10"
                android:layout_marginRight="@dimen/ll_casher_text_size_10"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/ll_color_tx6"
                android:textSize="@dimen/ll_casher_text_size_16" />

            <ImageView
                android:id="@+id/ll_dialog_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.67dp"
                android:layout_alignParentBottom="true"
                android:background="@color/ll_color_tx2" >
            </View>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/ll_dialog_body"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:padding="0dp" >
            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#d7d7d7" >
            </View>

            <LinearLayout
                android:id="@+id/ll_dialog_foot"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>